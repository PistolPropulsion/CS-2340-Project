<resources>

    <!-- Base application theme. -->

    <style name="NoActionBar" parent="@android:style/Theme.Material">
        <item name="android:textColor">#616161</item>
        <item name="android:textColorPrimary">#616161</item>
        <item name="android:textColorSecondary">#d66a6a</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary">#ffa292</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="ActionBar" parent="@android:style/Theme.Material">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:colorPrimary">#ffa292</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="CheckBoxStyle" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:textColor">#d66a6a</item>
    </style>

    </resources>
